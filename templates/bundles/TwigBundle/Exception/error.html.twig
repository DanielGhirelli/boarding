{% extends 'base.html.twig' %}

{% block title %}OmniFund | Error {{ status_code }}{% endblock %}

{% block body  %}
    <div class="container" style="margin-top:20px;">
        <div class="ibox">
            <div class="ibox-content" style="height: 500px;">
                <div class="text-center">
                    <table border="0" cellpadding="0" cellspacing="0" align="center" style="margin-top: 80px">
                        <tbody>
                        <tr>
                            <td>
                                <img src="{{ asset('/includes/images/error-card.png') }}" style="height: 245px">
                            </td>
                            <td>
                                <div style="margin-left: 80px; text-align: left">
                                    <h2 style="font-weight: bolder; font-size: 70px">Oops!</h2>
                                    <h2 style="font-size: 15px;">
                                        Looks like our server failed to load your request.
                                        <br /><br />
                                        Please try to reload this page by using the button below.
                                    </h2>
                                    <br />
                                    <button class="btn btn-primary btn-block" style="width: 200px" onClick="window.location.reload()">
                                        <span class="glyphicon glyphicon-refresh"></span>   TRY AGAIN
                                    </button>
                                    <br /><br /><br />
                                    <small style="font-weight: italic">
                                        Error: {{ status_code }} - {{ status_text }}
                                    </small>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
