{% extends 'register.html.twig' %}

{% block title %}OmniFund | {{ title }}{% endblock %}

{% block container  %}
    <div class="container">
        <div class="ibox">
            <div class="ibox-content">
                <div class="row" style="margin-bottom:40px;">
                    <div class="col-md-12">
                        <div class="col-xs-12">
                            {{ include ('step_indicator.html.twig', {step: 7}) }}
                        </div>

                        <div class="col-xs-6">
                            <h3 style="float:left; font-size: 19px;font-weight: 600;line-height: 23px;margin: 0 0 0 10px;padding: 0;">
                                <!-- Title -->
                                {{ title }}
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12" style="text-align:center;">
                        <span class="glyphicon glyphicon-ok" style="font-size: 50px; color: #3c763d;"></span>
                        <h1 style="font-weight: bolder">You're all set, thank you!</h1>
                        <h4 style="font-weight: normal; color: #8a8a8a;">
                            You have successfully submitted your registration form. The appropriate agreements will be <br/>
                            sent via Docusign to the owner's personal email address. You can expect those to arrive <br/>
                            within one business day. If you have any questions, please contact us directly.
                            <br/><br/><br/>
                            800-305-1534 x 1<br/>
                            boarding@omnifund.com
                        </h4>
                        <br />
                        <div style="display: flex; justify-content: center">
                            <button class="btn btn-primary btn-block" style="width: 230px" onclick="window.location.href='https://omnifund.com/';">
                                <span class="glyphicon glyphicon-arrow-left"></span>   BACK TO HOMEPAGE
                            </button>
                        </div>
                       <br /> <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}