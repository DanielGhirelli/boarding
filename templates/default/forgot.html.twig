{% extends 'base.html.twig' %}

{% block body  %}
    <div class="container" style="min-width:400px; max-width: 850px; margin-top: 10px">
        <a href="/"><img src="{{ asset('/includes/images/omnifund_logo.png') }}" style="height: 50px;"></a>

        <div class="ibox" style="margin: 10px auto 10px;">
            <div class="ibox-title">
                <h5>Application Assistance</h5>
            </div>

            <div class="ibox-content" id="main-content" style="{{ formReturn ? 'display:none' }}">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-md-12">
                                    {% for msg in app.session.flashBag.get('error') %}
                                        <div class="alert alert-danger">
                                            {{ msg }}
                                        </div>
                                    {% endfor %}

                                    {{ form_start(form) }}
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="basic-addon1"><img src="{{ asset('/includes/images/omnifund/icons/self_managed_user_portal_open.png') }}" style="max-width: 16px;"/></span>
                                            {{ form_widget(form.businessEmail, {value: app.session.flashBag.get('errorEmail')|join}) }}
                                        </div>
                                    </div>

                                    <div class="form-group" style="margin-bottom:0px;">
                                        {{ form_widget(form.submit) }}
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="ibox-content" style="border: 1px solid #E4E4E4; border-top-width: 3px; cursor: pointer; background-color: rgb(255, 255, 255);" onclick="window.open('https://support.gotobilling.com'); return false;" onmouseover="this.style.backgroundColor='#f1f1f1';" onmouseout="this.style.backgroundColor='#fff';">
                                        <table style="width:100%">
                                            <tbody>
                                            <tr>
                                                <td>
                                                    <span style="font-size:18px;font-weight:bold;">Need Help?</span><br>
                                                    Get assistance at our support desk!<br>
                                                    Help is only a click away.
                                                </td>
                                                <td>
                                                    <img src="{{ asset('includes/images/help_rev.png') }}" style="max-width: 50px;">
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="ibox-content" id="submit-content" style="{{ formReturn ?: 'display:none' }}">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-md-12">
                                    An email has been sent to the address we have on record. If you do not receive it, please check your spam and junk folders.
                                    If you have any issues, please contact the support desk at <a href="mailto:support@omnifund.com">support@omnifund.com</a> or 800-305-1534 (option 1).
                                    <br/><br/>
                                    <strong>PLEASE NOTE:</strong> For security purposes, OmniFund will not reset any account information.
                                    <br/><br/>

                                    <div style="display: flex; justify-content: center;">
                                        <button class="btn btn-primary btn-block" style="width: 230px" onclick="window.location.href='/';">
                                            <span class="glyphicon glyphicon-arrow-left"></span>   BACK TO HOMEPAGE
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function() {
            buttonBlur('application_forgot_form', '...Recover My Application ID...');
        });
    </script>
{% endblock %}